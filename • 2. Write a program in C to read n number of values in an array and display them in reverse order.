#include <stdio.h>

int main() {
    int n;
    int arr[100];
    printf("Numbers of elements you want to input ? ");
    scanf("%d",&n);
    printf("Input %d elements in the array :\n",n);
    for(int i=0;i<n;i++){
        printf("element - %d: ",i);
        scanf("%d",&arr[i]);
        
    }
    printf("Before :\n");
     for(int i=0;i<n;i++){
        printf("%3d ",arr[i]);

    }
    printf("\nAfter :\n");
     for(int i=n-1;i>=0;i--){
        printf("%3d ",arr[i]);

    }

    
   

    return 0;
}
